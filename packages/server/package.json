{
  "name": "@guru-erp/server",
  "version": "0.0.0",
  "description": "My Moleculer microservices project",
  "scripts": {
    "build": "tsc",
    "dev": "NODE_ENV=development ts-node-dev --respawn --transpileOnly -r tsconfig-paths/register ./node_modules/.bin/moleculer-runner --repl --config src/moleculer.config.ts src/services/**/*.service.ts",
    "cli": "moleculer connect NATS",
    "start": "yarn dev",
    "start:prod": "NODE_PATH=dist NODE_ENV=production moleculer-runner --config dist/moleculer.config.js dist/services/**/*.service.js",
    "ci": "NODE_ENV=test jest --watch",
    "test": "NODE_ENV=test jest --forceExit --detectOpenHandles --coverage",
    "lint": "tslint -p tsconfig.json"
  },
  "keywords": [
    "microservices",
    "moleculer"
  ],
  "author": "",
  "devDependencies": {
    "@types/bcrypt": "3.0.0",
    "@types/bluebird": "3.5.26",
    "@types/chance": "1.0.2",
    "@types/dotenv": "6.1.1",
    "@types/graphql": "14.2.0",
    "@types/jest": "24.0.11",
    "@types/jsonwebtoken": "8.3.2",
    "@types/lodash": "4.14.123",
    "@types/mongoose": "5.3.26",
    "@types/node": "10.14.5",
    "@types/nodemailer": "4.6.8",
    "@types/yup": "0.26.12",
    "dotenv": "7.0.0",
    "get-port": "5.0.0",
    "graphql-request": "1.8.2",
    "jest": "24.7.1",
    "jest-cli": "24.7.1",
    "mockingoose": "2.13.0",
    "moleculer-repl": "0.5.7",
    "mongodb-memory-server": "5.1.0",
    "ts-jest": "24.0.2",
    "ts-node": "8.1.0",
    "ts-node-dev": "1.0.0-pre.32",
    "tslint": "5.16.0",
    "typescript": "3.4.5"
  },
  "dependencies": {
    "accesscontrol": "2.2.1",
    "axios": "0.18.0",
    "bcrypt": "3.0.6",
    "chalk": "2.4.2",
    "chance": "1.0.18",
    "graphql": "14.2.1",
    "graphql-tag": "2.10.1",
    "graphql-voyager": "1.0.0-rc.27",
    "ioredis": "4.9.0",
    "jsonwebtoken": "8.5.1",
    "lodash": "4.17.11",
    "moleculer": "0.13.9",
    "moleculer-apollo-server": "moleculerjs/moleculer-apollo-server",
    "moleculer-web": "0.9.0-beta2",
    "moment": "2.24.0",
    "mongoose": "5.5.4",
    "mongoose-delete": "0.5.0",
    "nats": "1.2.10",
    "nodemailer": "6.1.1",
    "tsconfig-paths": "3.8.0",
    "yup": "0.27.0"
  },
  "engines": {
    "node": ">= 8.x.x"
  },
  "jest": {
    "coverageDirectory": "<rootDir>/coverage",
    "testEnvironment": "node",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js"
    ],
    "transform": {
      "^.+\\.(ts|tsx)$": "ts-jest"
    },
    "testMatch": [
      "**/*.spec.(ts|js)"
    ],
    "globals": {
      "ts-jest": {
        "tsConfig": "tsconfig.json"
      }
    }
  }
}
